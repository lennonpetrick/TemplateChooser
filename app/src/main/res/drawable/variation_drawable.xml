<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="true">

        <shape
            android:shape="oval"/>
    </item>

    <item
        android:state_selected="false">

        <shape
            android:shape="ring"
            android:innerRadius="@dimen/variation_circle_radius"
            android:thickness="@dimen/variation_circle_thickness"
            android:useLevel="false"/>
    </item>

</selector>